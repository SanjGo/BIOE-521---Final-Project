
#include <Adafruit_CircuitPlayground.h>

float tempC, tempF;
bool leftButtonPressed;
bool rightButtonPressed;

void setup() {
  Serial.begin(9600);
  CircuitPlayground.begin();
}

void loop() {
  tempC = CircuitPlayground.temperature();
  tempF = CircuitPlayground.temperatureF();
  CircuitPlayground.clearPixels();

  Serial.print("tempC: ");
  Serial.print(tempC);
  Serial.print("  tempF: ");
  Serial.println(tempF);
  if (tempF > 79){
      Serial.print(" OUCH! Drink is TOO HOT! (Red)\n"); 
       CircuitPlayground.setPixelColor(5, 0xFF0000); //red
       CircuitPlayground.setPixelColor(6, 0xFF0000); //red
       CircuitPlayground.setPixelColor(7, 0xFF0000); //red
       CircuitPlayground.setPixelColor(8, 0xFF0000); //red
       CircuitPlayground.setPixelColor(9, 0xFF0000); //red   
        
       CircuitPlayground.setPixelColor(0, 0xDC267F); //pink
       CircuitPlayground.setPixelColor(1, 0xDC267F); //pink
       CircuitPlayground.setPixelColor(2, 0xDC267F); //pink
       CircuitPlayground.setPixelColor(3, 0xDC267F); //pink
       CircuitPlayground.setPixelColor(4, 0xDC267F); //pink
       

  }
  else if (tempF < 77){
      Serial.print(" BRRR! Drink is COLD! (Blue)\n"); 
       CircuitPlayground.setPixelColor(5, 0x0000FF);// dark blue
       CircuitPlayground.setPixelColor(6, 0x0000FF);// dark blue
       CircuitPlayground.setPixelColor(7, 0x0000FF);// dark blue
       CircuitPlayground.setPixelColor(8, 0x0000FF);// dark blue
       CircuitPlayground.setPixelColor(9, 0x0000FF);// dark blue
        
       CircuitPlayground.setPixelColor(0, 0x785EF0); //light purple
       CircuitPlayground.setPixelColor(1, 0x785EF0); //light purple
       CircuitPlayground.setPixelColor(2, 0x785EF0); //light purple
       CircuitPlayground.setPixelColor(3, 0x785EF0); //light purple
       CircuitPlayground.setPixelColor(4, 0x785EF0); //light purple

     
  }
  else{
      Serial.print(" OKAY! Drink is DRINKABLE! (Green)\n"); 
       CircuitPlayground.setPixelColor(5, 0x00FF00); //green
       CircuitPlayground.setPixelColor(6, 0x00FF00); //green
       CircuitPlayground.setPixelColor(7, 0x00FF00); //green
       CircuitPlayground.setPixelColor(8, 0x00FF00); //green
       CircuitPlayground.setPixelColor(9, 0x00FF00); //green
        
       CircuitPlayground.setPixelColor(0, 0xFE6100); //orange
       CircuitPlayground.setPixelColor(1, 0xFE6100); //orange
       CircuitPlayground.setPixelColor(2, 0xFE6100); //orange
       CircuitPlayground.setPixelColor(3, 0xFE6100); //orange
       CircuitPlayground.setPixelColor(4, 0xFE6100); //orange


  }
  
  delay(2000);

  leftButtonPressed = CircuitPlayground.leftButton();
  rightButtonPressed = CircuitPlayground.rightButton();
  
    if (leftButtonPressed) {
       Serial.print("Left Button pressed - Color 1 palette activated  "); //Color blind palette
        CircuitPlayground.setPixelColor(0, 0x648FFF); //Light blue
        CircuitPlayground.setPixelColor(1, 0x785EF0); //light purple
        CircuitPlayground.setPixelColor(2, 0xDC267F); //pink
        CircuitPlayground.setPixelColor(3, 0xFE6100); //orange
        CircuitPlayground.setPixelColor(4, 0xFFB000); //yellow
  } else {
  CircuitPlayground.clearPixels();
  }

  if (rightButtonPressed) {
       Serial.print("Right Button pressed - Color 2 palette activated  ");
       CircuitPlayground.setPixelColor(5, 0xFF0000); //red
       CircuitPlayground.setPixelColor(6, 0x808000); //yellow
       CircuitPlayground.setPixelColor(7, 0x00FF00); //green
       CircuitPlayground.setPixelColor(8, 0x008080); //blue
        CircuitPlayground.setPixelColor(9, 0x0000FF);// dark blue
  } else {
  CircuitPlayground.clearPixels();
  }
 delay(1000); 
}

